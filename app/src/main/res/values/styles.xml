<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">@dimen/large</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/large</item>
        <item name="android:elevation">@dimen/small</item>
    </style>

    <style name="BodyText">
        <item name="android:padding">@dimen/small</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:padding">@dimen/normal</item>
    </style>
</resources>